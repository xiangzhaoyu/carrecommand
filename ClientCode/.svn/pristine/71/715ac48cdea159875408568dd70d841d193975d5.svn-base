<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
         >

        <TextView
            style="@style/textView_size14_yahui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="勾选选择分类" />
        
           <Button
                android:id="@+id/choose_all"
                style="@style/textView_size14_yahei"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_white2"
                android:text="全选" />
           
              <Button
                android:id="@+id/choose_clear"
                style="@style/textView_size14_yahei"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                  android:layout_marginLeft="8dp"
                android:background="@drawable/btn_white2"
                android:text="清空" />
              
              

      
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/divider_dashed_line"
        android:scaleType="fitXY" />
    
        <ListView
        android:id="@+id/white_list_view"
        style="@style/widget_listview_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</LinearLayout>
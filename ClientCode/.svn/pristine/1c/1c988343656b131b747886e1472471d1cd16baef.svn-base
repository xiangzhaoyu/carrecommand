	private Schedule getScheduleByTag(int type) {

		Schedule sch;

		sch = _listSchedule.get(type);
		if (sch == null) {
			sch = new Schedule();
			sch.setDayNum(type);
			_listSchedule.put(type, sch);
		}

		return sch;
	}

	private List<Integer> getCheckList() {

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <TextView
            style="@style/textView_size14_yahui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用白名单或黑名单:" />

        <RadioGroup
            android:id="@+id/use_white_black_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <RadioButton
                android:id="@+id/use_white"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:checked="true"
                android:text="白名单" />

            <RadioButton
                android:id="@+id/use_black"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.0"
                android:text="黑名单" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/divider_dashed_line"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/textView_size14_yahui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否使用推荐过滤    :" />

        <RadioGroup
            android:id="@+id/use_recommend_yes_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <RadioButton
                android:id="@+id/use_recommend_yes"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:checked="true"
                android:text="是" />

            <RadioButton
                android:id="@+id/use_recommend_no"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.0"
                android:text="否" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/divider_dashed_line"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/textView_size14_yahui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否使用关键字过滤:" />

        <RadioGroup
            android:id="@+id/use_keyword_yes_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="8dp" >

            <RadioButton
                android:id="@+id/use_keyword_yes"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:checked="true"
                android:text="是" />

            <RadioButton
                android:id="@+id/use_keyword_no"
                style="@style/choose_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.0"
                android:text="否" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/divider_dashed_line"
        android:scaleType="fitXY" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/frame_bg_small"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/topbar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/btn_title_button_bg"
        android:scaleType="center"
        android:clickable="true"
        android:src="@drawable/browser_back_dn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <TextView
            android:id="@+id/topbar_title"
            style="@style/title_detail_head"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/topbar_right_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/btn_title_button_bg"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/browser_open_dn"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topbar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/btn_title_button_bg"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/browser_refresh_dn" />

</LinearLayout>